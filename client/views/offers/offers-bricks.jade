template(name="offersBricks")
	.bricks
		each this
			+offersBrick
			
template(name="offersBrick")
	.brick
		a.image(href="{{pathFor 'offer'}}")
			img.image(src="{{picture}}", alt="{{title}}")

		.loading

		.caption
			h4.title {{address}}
			p.desc {{desc}}

			.icons
				span.price(title="Price") {{{convertPrice price}}}

				if favorite
					a.btn.star(href="#")
						i.fa.fa-star
						|&nbsp;Like
				else
					a.btn.star(href="#")
						i.fa.fa-star-o
						|&nbsp;Like
