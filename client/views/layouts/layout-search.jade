template(name="layoutSearch")
	.app.section-home.limiter
		.block
		//- p {{this.offers}}
		.grid
			.col-6
				+asidePanel

			.col-18
				form.search-form#search(action)
					+esInput(index="offers" timeout=1000 allDocsOnEmpty=false reactive=false)
					
				br
			
				.bricks
					+ifEsIsSearching(index="offers")
						p Loading
					else
						+esEach(index="offers")
							+offersBrick
							
						+esLoadMoreButton(index="offers" howMany=12 class="load-more")
						
					+ifEsHasNoResults(index="offers")
						p No results
