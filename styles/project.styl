@import 'jeet'
@import 'nib'
@import 'rupture'

.app
	cf()
	
	width 1100px
	margin 0 auto
	padding 20px
	
	+below(1000px)
		width 960px
	
	+below(600px)
		width auto
	
	.main
		col(4/5)
		
		+below(600px)
			col(1/1)
		
	.aside
		col(1/5)
		
		+below(600px)
			col(1/1)

.bricks
	cf()
	
	.brick
		col(1/3, cycle: 3)
		
		+below(800px)
			col(1/2, cycle: 2, uncycle: 3)
			
		+below(600px)
			col(1/1, cycle: 1, uncycle: 2)