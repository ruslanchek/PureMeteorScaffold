@keyframes loading-pattern
	from
		background-position: 0 0
	to
		background-position: 50px 0


@keyframes active-button-reflow
	to
		width auto


@keyframes active-button
	0%
		transform scale(0)
		opacity 0

	1%
		transform scale(0)
		opacity .5

	100%
		transform scale(6)
		opacity 0

@keyframes loading-balls
	0%
		transform rotateZ(0deg)
	100%
		transform rotateZ(360deg)

@keyframes fade-from-bottom
	from
		transform translateY(10%)
		opacity 0

	to
		transform translateY(0)
		opacity 1
