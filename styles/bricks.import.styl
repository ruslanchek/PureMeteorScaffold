.bricks
	cf()

	.brick
		col(1/4, cycle: 4)

		margin-bottom 30px
		background white
		border-radius 5px
		box-shadow 0 2px 3px rgba(0, 0, 0, .1)

		+below(600px)
			col(1/1, cycle: 1, uncycle: 4)

		.image
			display block
			position relative

			&:after
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				width 100%
				height 100%
				background rgba(255, 255, 255, .25)
				transition .15s
				opacity 0

			img
				display block
				border-radius 5px 5px 0 0
				width 100%

			&:hover
				opacity 1

		.caption
			padding 25px
