.bricks
	cf()

	.brick
		col(1/4, cycle: 4, gutter: 0)

		background white
		transition .15s

		+below(600px)
			col(1/1, cycle: 1, uncycle: 4, gutter: 0)

		.image
			display block
			position relative

			&:after
				content ''
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				width 100%
				height 100%
				background rgba(255, 255, 255, .5)
				transition .15s
				opacity 1
				z-index 1

			img
				display block
				width 100%

		.caption
			padding 25px

		&:hover
			.image
				&:after
					opacity 0

			.caption
				background #eee
