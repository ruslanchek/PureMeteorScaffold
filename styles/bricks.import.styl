.bricks
	cf()

	.brick
		height $brick-height
		background white
		transition .15s
		border 1px solid $color-gray-lt
		border-radius 5px
		margin-bottom 30px
		position relative
		padding 0 0 0 $brick-height
		
		+below(600px)
			padding 0
			height auto

		.image
			display block
			position relative
			border-radius 4px 0 0 4px
			overflow hidden
			position absolute
			left 0
			top 0
			width $brick-height
			height $brick-height
			z-index 1
			
			+below(600px)
				position relative
				width 100%
				height auto
				left 0

			&:after
				content ''
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				width 100%
				height 100%
				background rgba(255, 255, 255, .5)
				transition .15s
				opacity 1
				z-index 1

			img
				display block
				width 100%
				heigth 100%

		.caption
			padding 40px
			height $brick-height
			box-sizing border-box
			
			+below(600px)
				height auto
			
			.desc
				margin-bottom 30px
			
			.title
				font-size 35px
				margin-bottom 30px
				
			.icons
				.price
					margin-right 30px
				

		&:hover
			background $color-gray-lt
			
			.image
				&:after
					opacity 0
